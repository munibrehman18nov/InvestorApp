<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriversActivity"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/_2sdp"
    android:paddingRight="@dimen/_2sdp"
    android:background="@color/startBlue">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_65sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:background="@color/greyLight">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:background="@color/greyLight">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_65sdp"
                android:id="@+id/dImgVU"
                android:src="@drawable/me"
                android:padding="@dimen/_4sdp" />

            <LinearLayout
                android:layout_margin="@dimen/_2sdp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/greyLight">
                <TextView
                    android:id="@+id/tVu_sname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/startBlue"
                    android:textSize="@dimen/_14sdp"
                    android:background="@color/greyLight"/>
                <TextView
                    android:background="@color/greyLight"
                    android:id="@+id/dr_nameVu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:textColor="@color/darkGrey" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lo_dProfile"
                android:background="@color/greyLight"
                android:layout_margin="@dimen/_2sdp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tVu_profile"
                    android:background="@color/greyLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/startBlue"/>
                <!--<TextView
                    android:id="@+id/totalVehicles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:textColor="@color/startBlue"
                    />-->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_deleteDriver"
                android:background="@color/greyLight"
                android:layout_margin="@dimen/_2sdp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/delete_imgVu"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_delete"/>
                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:textColor="@color/startBlue" />-->
            </LinearLayout>
            <!--<ImageView
                android:id="@+id/btn_deleteVehicle"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_delete"/>-->

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>